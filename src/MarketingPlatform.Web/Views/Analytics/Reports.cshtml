@{
    ViewData["Title"] = "Reports";
}

<div class="container-fluid">
    <h2 class="mb-4"><i class="bi bi-file-earmark-bar-graph"></i> Reports</h2>

    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-file-text"></i> Campaign Summary Report</h5>
                    <p class="card-text">Comprehensive overview of all campaigns</p>
                    <button class="btn btn-primary" onclick="generateReport('campaign-summary')">
                        <i class="bi bi-download"></i> Generate
                    </button>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-people"></i> Contact Engagement Report</h5>
                    <p class="card-text">Contact activity and engagement metrics</p>
                    <button class="btn btn-primary" onclick="generateReport('contact-engagement')">
                        <i class="bi bi-download"></i> Generate
                    </button>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-cash-coin"></i> Revenue Report</h5>
                    <p class="card-text">Financial performance and ROI analysis</p>
                    <button class="btn btn-primary" onclick="generateReport('revenue')">
                        <i class="bi bi-download"></i> Generate
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header">
            <h5>Recent Reports</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Report Name</th>
                            <th>Generated</th>
                            <th>Type</th>
                            <th>Size</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Campaign Summary - Q2 2024</td>
                            <td>2024-07-15 10:30 AM</td>
                            <td>PDF</td>
                            <td>2.4 MB</td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary"><i class="bi bi-download"></i></button>
                                <button class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
                            </td>
                        </tr>
                        <tr>
                            <td>Contact Engagement - June 2024</td>
                            <td>2024-07-01 09:15 AM</td>
                            <td>Excel</td>
                            <td>1.8 MB</td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary"><i class="bi bi-download"></i></button>
                                <button class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script nonce="@Context.GetCspNonce()">
        function generateReport(type) {
            alert(`Generating ${type} report... (Demo)`);
        }
    </script>
}
