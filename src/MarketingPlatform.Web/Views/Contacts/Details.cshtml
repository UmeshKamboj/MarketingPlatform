@{
    ViewData["Title"] = "Contact Details";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-person-badge"></i> Contact Details</h2>
        <div>
            <button class="btn btn-primary" onclick="editContact()">
                <i class="bi bi-pencil"></i> Edit
            </button>
            <a href="@Url.Action("Index", "Contacts")" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="bi bi-person-circle" style="font-size: 5rem; color: #667eea;"></i>
                    <h4 class="mt-3" id="contactName">Loading...</h4>
                    <p class="text-muted" id="contactEmail">email@example.com</p>
                    <span class="badge bg-success">Active</span>
                </div>
            </div>
            
            <div class="card mt-3">
                <div class="card-header">
                    <h6>Quick Stats</h6>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Emails Received:</span>
                        <strong>45</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Emails Opened:</span>
                        <strong>32</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Links Clicked:</span>
                        <strong>18</strong>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-8">
            <div class="card mb-3">
                <div class="card-header">
                    <h5>Contact Information</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-2">
                        <div class="col-md-4 text-muted">Name:</div>
                        <div class="col-md-8" id="fullName">John Doe</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-4 text-muted">Email:</div>
                        <div class="col-md-8" id="email">john@example.com</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-4 text-muted">Phone:</div>
                        <div class="col-md-8" id="phone">+1 555-0100</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-4 text-muted">Company:</div>
                        <div class="col-md-8" id="company">Acme Corp</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-4 text-muted">Location:</div>
                        <div class="col-md-8" id="location">New York, NY, USA</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-4 text-muted">Groups:</div>
                        <div class="col-md-8">
                            <span class="badge bg-secondary">Customers</span>
                            <span class="badge bg-secondary">Newsletter</span>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-bs-toggle="tab" href="#activity">Activity</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#campaigns">Campaigns</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#notes">Notes</a>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="activity">
                            <div class="list-group list-group-flush">
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">Opened Email: Summer Sale</h6>
                                        <small class="text-muted">2 days ago</small>
                                    </div>
                                </div>
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">Clicked Link: Product Page</h6>
                                        <small class="text-muted">3 days ago</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="campaigns">
                            <p>Received 5 campaigns in the last 30 days</p>
                        </div>
                        <div class="tab-pane fade" id="notes">
                            <textarea class="form-control" rows="5" placeholder="Add notes about this contact..."></textarea>
                            <button class="btn btn-primary btn-sm mt-2">Save Note</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/contacts-details.js" asp-append-version="true"></script>
}
