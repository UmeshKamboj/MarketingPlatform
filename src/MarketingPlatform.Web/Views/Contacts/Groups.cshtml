@{
    ViewData["Title"] = "Contact Groups";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-collection"></i> Contact Groups</h2>
        <button class="btn btn-primary" onclick="createGroup()">
            <i class="bi bi-plus-circle"></i> Create New Group
        </button>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div id="groups-list">
                        <div class="text-center py-5">
                            <div class="spinner-border" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const apiBaseUrl = '@ViewBag.ApiBaseUrl';
        
        document.addEventListener('DOMContentLoaded', function() {
            loadGroups();
        });

        async function loadGroups() {
            const listContainer = document.getElementById('groups-list');
            
            const mockGroups = [
                { id: 1, name: 'Customers', description: 'All active customers', contactCount: 1234, isStatic: true },
                { id: 2, name: 'Newsletter Subscribers', description: 'Newsletter opt-in contacts', contactCount: 5678, isStatic: true },
                { id: 3, name: 'VIP Members', description: 'High-value customers', contactCount: 89, isStatic: false },
                { id: 4, name: 'Recent Purchasers', description: 'Purchased in last 30 days', contactCount: 456, isStatic: false }
            ];
            
            let html = '<div class="row">';
            mockGroups.forEach(group => {
                html += `
                    <div class="col-md-6 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h5 class="card-title">${group.name}</h5>
                                        <p class="card-text text-muted">${group.description}</p>
                                        <p class="mb-0">
                                            <strong>${group.contactCount.toLocaleString()}</strong> contacts
                                            ${group.isStatic ? '<span class="badge bg-info ms-2">Static</span>' : '<span class="badge bg-warning ms-2">Dynamic</span>'}
                                        </p>
                                    </div>
                                    <div class="btn-group">
                                        <button class="btn btn-sm btn-outline-primary" onclick="viewGroup(${group.id})">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-success" onclick="editGroup(${group.id})">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger" onclick="deleteGroup(${group.id})">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
            });
            html += '</div>';
            
            listContainer.innerHTML = html;
        }

        function createGroup() {
            alert('Create group functionality (Demo)');
        }

        function viewGroup(id) {
            alert(`View group ${id} (Demo)`);
        }

        function editGroup(id) {
            alert(`Edit group ${id} (Demo)`);
        }

        function deleteGroup(id) {
            if (confirm('Are you sure you want to delete this group?')) {
                alert('Group deleted! (Demo)');
                loadGroups();
            }
        }
    </script>
}
