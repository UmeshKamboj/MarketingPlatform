@{
    ViewData["Title"] = "Navigation Menu";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-list"></i> Navigation Menu Configuration</h2>
        <a href="@Url.Action("Index", "LandingPageConfig")" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="mb-3">
                <button class="btn btn-sm btn-primary" onclick="addMenuItem()">
                    <i class="bi bi-plus"></i> Add Menu Item
                </button>
            </div>

            <div id="menuItems">
                <div class="card mb-2">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <input type="text" class="form-control" value="Home" placeholder="Label">
                            </div>
                            <div class="col-md-4">
                                <input type="text" class="form-control" value="/" placeholder="URL">
                            </div>
                            <div class="col-md-3">
                                <input type="number" class="form-control" value="1" placeholder="Order">
                            </div>
                            <div class="col-md-1">
                                <button class="btn btn-sm btn-danger w-100" onclick="removeItem(this)">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-2">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <input type="text" class="form-control" value="Features" placeholder="Label">
                            </div>
                            <div class="col-md-4">
                                <input type="text" class="form-control" value="#features" placeholder="URL">
                            </div>
                            <div class="col-md-3">
                                <input type="number" class="form-control" value="2" placeholder="Order">
                            </div>
                            <div class="col-md-1">
                                <button class="btn btn-sm btn-danger w-100" onclick="removeItem(this)">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-2">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <input type="text" class="form-control" value="Pricing" placeholder="Label">
                            </div>
                            <div class="col-md-4">
                                <input type="text" class="form-control" value="#pricing" placeholder="URL">
                            </div>
                            <div class="col-md-3">
                                <input type="number" class="form-control" value="3" placeholder="Order">
                            </div>
                            <div class="col-md-1">
                                <button class="btn btn-sm btn-danger w-100" onclick="removeItem(this)">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <button class="btn btn-primary mt-3">
                <i class="bi bi-check-circle"></i> Save Menu
            </button>
        </div>
    </div>
</div>

@section Scripts {
    <script nonce="@Context.GetCspNonce()">
        function addMenuItem() {
            const menuItems = document.getElementById('menuItems');
            const newItem = document.createElement('div');
            newItem.className = 'card mb-2';
            newItem.innerHTML = `
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <input type="text" class="form-control" placeholder="Label">
                        </div>
                        <div class="col-md-4">
                            <input type="text" class="form-control" placeholder="URL">
                        </div>
                        <div class="col-md-3">
                            <input type="number" class="form-control" placeholder="Order">
                        </div>
                        <div class="col-md-1">
                            <button class="btn btn-sm btn-danger w-100" onclick="removeItem(this)">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>
            `;
            menuItems.appendChild(newItem);
        }

        function removeItem(btn) {
            btn.closest('.card').remove();
        }
    </script>
}
