<!-- Chat Widget - Positioned on Bottom Left -->
<div id="chat-widget">
    <!-- Chat Button -->
    <button id="chat-button" type="button" aria-label="Open chat">
        <i class="bi bi-chat-dots-fill"></i>
        <span class="unread-badge" id="chat-unread-badge" style="display: none;">0</span>
    </button>

    <!-- Chat Window -->
    <div id="chat-window">
        <!-- Chat Header -->
        <div class="chat-header">
            <div class="chat-header-title">
                <i class="bi bi-headset"></i>
                <div>
                    <h5>Support Chat</h5>
                    <small class="chat-status online" id="chat-status">We're online!</small>
                </div>
            </div>
            <button type="button" class="chat-close-btn" id="chat-close-btn">
                <i class="bi bi-x"></i>
            </button>
        </div>

        <!-- Pre-chat Form (shown before chat starts) -->
        <div id="pre-chat-form">
            <h6>Welcome to our support chat!</h6>
            <p class="text-muted small">Please provide your details to get started.</p>
            
            <div class="form-group">
                <label for="guest-name">Your Name <span class="text-danger">*</span></label>
                <input type="text" id="guest-name" class="form-control" placeholder="Enter your name" required />
            </div>
            
            <div class="form-group">
                <label for="guest-email">Your Email <span class="text-danger">*</span></label>
                <input type="email" id="guest-email" class="form-control" placeholder="Enter your email" required />
            </div>
            
            <button type="button" id="start-chat-btn" class="btn btn-primary w-100">
                <i class="bi bi-chat-dots"></i> Start Chat
            </button>
        </div>

        <!-- Chat Messages Area (hidden initially) -->
        <div id="chat-messages-area">
            <div id="chat-messages">
                <!-- Welcome message will be added here -->
                <div class="system-message">
                    Chat session started
                </div>
            </div>
            
            <!-- Typing Indicator -->
            <div class="typing-indicator" id="typing-indicator">
                <div class="typing-dot"></div>
                <div class="typing-dot"></div>
                <div class="typing-dot"></div>
            </div>
            
            <!-- Chat Input -->
            <div class="chat-input-area">
                <textarea 
                    id="chat-input" 
                    placeholder="Type a message..." 
                    rows="1"
                    maxlength="2000"></textarea>
                <button type="button" id="send-message-btn" aria-label="Send message">
                    <i class="bi bi-send-fill"></i>
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- SignalR Library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    
    <!-- Chat Widget JavaScript -->
    <script nonce="@Context.GetCspNonce()">
        window.chatConfig = {
            apiBaseUrl: '@ViewBag.ApiBaseUrl' || 'https://localhost:7011',
            hubUrl: '@ViewBag.ApiBaseUrl' + '/hubs/chat' || 'https://localhost:7011/hubs/chat'
        };
    </script>
    <script src="~/js/chat-widget.js" asp-append-version="true"></script>
}
