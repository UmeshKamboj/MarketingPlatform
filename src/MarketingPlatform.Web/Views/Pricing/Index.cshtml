@{
    ViewData["Title"] = "Pricing Plans";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-tag"></i> Pricing Plans</h2>
        <a href="@Url.Action("Create", "Pricing")" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create Plan
        </a>
    </div>

    <div class="row" id="pricingPlans">
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4>Starter</h4>
                </div>
                <div class="card-body">
                    <h2 class="text-center mb-3">$29<small>/month</small></h2>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-check-circle text-success"></i> Up to 1,000 contacts</li>
                        <li><i class="bi bi-check-circle text-success"></i> 5,000 emails/month</li>
                        <li><i class="bi bi-check-circle text-success"></i> Basic templates</li>
                        <li><i class="bi bi-check-circle text-success"></i> Email support</li>
                    </ul>
                </div>
                <div class="card-footer">
                    <button class="btn btn-sm btn-outline-primary me-2" data-action="edit-plan" data-plan-id="1">
                        <i class="bi bi-pencil"></i> Edit
                    </button>
                    <button class="btn btn-sm btn-outline-danger" data-action="delete-plan" data-plan-id="1">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card border-primary">
                <div class="card-header bg-success text-white">
                    <h4>Professional</h4>
                    <span class="badge bg-warning">Popular</span>
                </div>
                <div class="card-body">
                    <h2 class="text-center mb-3">$79<small>/month</small></h2>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-check-circle text-success"></i> Up to 10,000 contacts</li>
                        <li><i class="bi bi-check-circle text-success"></i> 50,000 emails/month</li>
                        <li><i class="bi bi-check-circle text-success"></i> Advanced templates</li>
                        <li><i class="bi bi-check-circle text-success"></i> Priority support</li>
                        <li><i class="bi bi-check-circle text-success"></i> A/B Testing</li>
                    </ul>
                </div>
                <div class="card-footer">
                    <button class="btn btn-sm btn-outline-primary me-2" data-action="edit-plan" data-plan-id="2">
                        <i class="bi bi-pencil"></i> Edit
                    </button>
                    <button class="btn btn-sm btn-outline-danger" data-action="delete-plan" data-plan-id="2">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h4>Enterprise</h4>
                </div>
                <div class="card-body">
                    <h2 class="text-center mb-3">$299<small>/month</small></h2>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-check-circle text-success"></i> Unlimited contacts</li>
                        <li><i class="bi bi-check-circle text-success"></i> Unlimited emails</li>
                        <li><i class="bi bi-check-circle text-success"></i> Custom templates</li>
                        <li><i class="bi bi-check-circle text-success"></i> 24/7 support</li>
                        <li><i class="bi bi-check-circle text-success"></i> Advanced analytics</li>
                        <li><i class="bi bi-check-circle text-success"></i> API access</li>
                    </ul>
                </div>
                <div class="card-footer">
                    <button class="btn btn-sm btn-outline-primary me-2" data-action="edit-plan" data-plan-id="3">
                        <i class="bi bi-pencil"></i> Edit
                    </button>
                    <button class="btn btn-sm btn-outline-danger" data-action="delete-plan" data-plan-id="3">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header">
            <h5><i class="bi bi-sliders"></i> Channel Pricing</h5>
        </div>
        <div class="card-body">
            <a href="@Url.Action("Channels", "Pricing")" class="btn btn-primary">
                <i class="bi bi-cash-coin"></i> Manage Channel Pricing
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/pricing-index.js" asp-append-version="true"></script>
}
