@model IEnumerable<MarketingPlatform.Application.DTOs.PageContentDto>
@{
    ViewData["Title"] = "Manage Page Content";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="bi bi-file-text"></i> Manage Page Content</h2>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="bi bi-shield-lock"></i> Privacy Policy
                                    </h5>
                                    <p class="card-text text-muted">Manage your privacy policy content and images.</p>
                                    <a href="@Url.Action("Edit", new { pageKey = "privacy-policy" })" class="btn btn-primary">
                                        <i class="bi bi-pencil"></i> Edit Privacy Policy
                                    </a>
                                    <a href="@Url.Action("Privacy", "Home")" class="btn btn-outline-secondary" target="_blank">
                                        <i class="bi bi-eye"></i> Preview
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="bi bi-file-text"></i> Terms of Service
                                    </h5>
                                    <p class="card-text text-muted">Manage your terms of service content and images.</p>
                                    <a href="@Url.Action("Edit", new { pageKey = "terms-of-service" })" class="btn btn-primary">
                                        <i class="bi bi-pencil"></i> Edit Terms of Service
                                    </a>
                                    <a href="@Url.Action("Terms", "Home")" class="btn btn-outline-secondary" target="_blank">
                                        <i class="bi bi-eye"></i> Preview
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (Model != null && Model.Any())
                    {
                        <div class="mt-4">
                            <h5>Content Status</h5>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Page</th>
                                            <th>Title</th>
                                            <th>Status</th>
                                            <th>Last Updated</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    <span class="badge bg-secondary">@item.PageKey</span>
                                                </td>
                                                <td>@item.Title</td>
                                                <td>
                                                    @if (item.IsPublished)
                                                    {
                                                        <span class="badge bg-success">Published</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-warning">Draft</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (item.UpdatedAt.HasValue)
                                                    {
                                                        @item.UpdatedAt.Value.ToString("MMM dd, yyyy")
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">Never</span>
                                                    }
                                                </td>
                                                <td>
                                                    <a href="@Url.Action("Edit", new { pageKey = item.PageKey })" class="btn btn-sm btn-primary">
                                                        <i class="bi bi-pencil"></i> Edit
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
