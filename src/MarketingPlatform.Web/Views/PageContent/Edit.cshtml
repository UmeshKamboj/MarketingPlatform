@model MarketingPlatform.Application.DTOs.PageContentDto
@{
    ViewData["Title"] = $"Edit {Model.Title}";
    var pageDisplayName = Model.PageKey == "privacy-policy" ? "Privacy Policy" : "Terms of Service";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2><i class="bi bi-pencil"></i> Edit @pageDisplayName</h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-action="Index">Page Content</a></li>
                            <li class="breadcrumb-item active">Edit @pageDisplayName</li>
                        </ol>
                    </nav>
                </div>
                <div>
                    <a href="@Url.Action(Model.PageKey == "privacy-policy" ? "Privacy" : "Terms", "Home")" 
                       class="btn btn-outline-secondary" target="_blank">
                        <i class="bi bi-eye"></i> Preview Page
                    </a>
                </div>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="PageKey" />

                <div class="row">
                    <div class="col-lg-8">
                        <div class="card mb-3">
                            <div class="card-header">
                                <h5 class="mb-0">Page Content</h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label asp-for="Title" class="form-label">Page Title</label>
                                    <input asp-for="Title" class="form-control form-control-lg" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="MetaDescription" class="form-label">Meta Description (SEO)</label>
                                    <textarea asp-for="MetaDescription" class="form-control" rows="2" 
                                              placeholder="Brief description for search engines"></textarea>
                                    <span asp-validation-for="MetaDescription" class="text-danger"></span>
                                    <small class="text-muted">Recommended: 150-160 characters</small>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Content" class="form-label">Content</label>
                                    <textarea asp-for="Content" class="form-control" id="content-editor" rows="15"></textarea>
                                    <span asp-validation-for="Content" class="text-danger"></span>
                                    <small class="text-muted">HTML is supported. Use the editor below or write HTML directly.</small>
                                </div>

                                <div class="form-check mb-3">
                                    <input asp-for="IsPublished" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsPublished" class="form-check-label">
                                        Published (visible to users)
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="card mb-3">
                            <div class="card-header">
                                <h5 class="mb-0">Formatting Help</h5>
                            </div>
                            <div class="card-body">
                                <p class="mb-2"><strong>Common HTML tags:</strong></p>
                                <ul class="small">
                                    <li><code>&lt;h2&gt;Heading&lt;/h2&gt;</code> - Main section heading</li>
                                    <li><code>&lt;h5&gt;Subheading&lt;/h5&gt;</code> - Subsection heading</li>
                                    <li><code>&lt;p&gt;Text&lt;/p&gt;</code> - Paragraph</li>
                                    <li><code>&lt;ul&gt;&lt;li&gt;Item&lt;/li&gt;&lt;/ul&gt;</code> - Bullet list</li>
                                    <li><code>&lt;strong&gt;Bold&lt;/strong&gt;</code> - Bold text</li>
                                    <li><code>&lt;em&gt;Italic&lt;/em&gt;</code> - Italic text</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="card mb-3">
                            <div class="card-header">
                                <h5 class="mb-0">Images</h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label class="form-label">Upload Image</label>
                                    <input type="file" class="form-control" id="imageUpload" accept="image/*" />
                                    <small class="text-muted">Max size: 5MB. Formats: JPG, PNG, GIF, WebP</small>
                                </div>

                                <div id="uploadProgress" class="progress mb-3" style="display: none;">
                                    <div class="progress-bar progress-bar-striped progress-bar-animated" 
                                         role="progressbar" style="width: 0%"></div>
                                </div>

                                <div id="imageGallery" class="row g-2">
                                    @if (Model.ImageUrls != null && Model.ImageUrls.Any())
                                    {
                                        @foreach (var imageUrl in Model.ImageUrls)
                                        {
                                            <div class="col-6 image-item" data-url="@imageUrl">
                                                <div class="card">
                                                    <img src="@imageUrl" class="card-img-top" alt="Page image" />
                                                    <div class="card-body p-2 text-center">
                                                        <button type="button" class="btn btn-sm btn-danger delete-image" 
                                                                data-url="@imageUrl">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                        <button type="button" class="btn btn-sm btn-secondary copy-url" 
                                                                data-url="@imageUrl">
                                                            <i class="bi bi-clipboard"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <div class="col-12">
                                            <p class="text-muted text-center">No images uploaded yet</p>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">Actions</h5>
                            </div>
                            <div class="card-body">
                                <button type="submit" class="btn btn-primary w-100 mb-2">
                                    <i class="bi bi-save"></i> Save Changes
                                </button>
                                <a asp-action="Index" class="btn btn-outline-secondary w-100">
                                    <i class="bi bi-arrow-left"></i> Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const pageKey = '@Model.PageKey';

        // Handle image upload
        document.getElementById('imageUpload').addEventListener('change', async function(e) {
            const file = e.target.files[0];
            if (!file) return;

            const formData = new FormData();
            formData.append('file', file);
            formData.append('pageKey', pageKey);

            const progressBar = document.getElementById('uploadProgress');
            progressBar.style.display = 'block';
            progressBar.querySelector('.progress-bar').style.width = '50%';

            try {
                const response = await fetch('@Url.Action("UploadImage")', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();
                
                if (result.success) {
                    progressBar.querySelector('.progress-bar').style.width = '100%';
                    
                    // Add image to gallery
                    addImageToGallery(result.imageUrl);
                    
                    setTimeout(() => {
                        progressBar.style.display = 'none';
                        progressBar.querySelector('.progress-bar').style.width = '0%';
                    }, 1000);
                    
                    e.target.value = '';
                    
                    alert('Image uploaded successfully!');
                } else {
                    throw new Error(result.message || 'Upload failed');
                }
            } catch (error) {
                console.error('Upload error:', error);
                alert('Failed to upload image: ' + error.message);
                progressBar.style.display = 'none';
            }
        });

        // Handle image deletion
        document.addEventListener('click', async function(e) {
            if (e.target.classList.contains('delete-image') || e.target.closest('.delete-image')) {
                const btn = e.target.classList.contains('delete-image') ? e.target : e.target.closest('.delete-image');
                const imageUrl = btn.dataset.url;
                
                if (!confirm('Are you sure you want to delete this image?')) {
                    return;
                }

                try {
                    const response = await fetch('@Url.Action("DeleteImage")', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ imageUrl, pageKey })
                    });

                    const result = await response.json();
                    
                    if (result.success) {
                        // Remove from gallery
                        const imageItem = btn.closest('.image-item');
                        imageItem.remove();
                        
                        alert('Image deleted successfully!');
                    } else {
                        throw new Error('Delete failed');
                    }
                } catch (error) {
                    console.error('Delete error:', error);
                    alert('Failed to delete image');
                }
            }
        });

        // Handle copy URL
        document.addEventListener('click', function(e) {
            if (e.target.classList.contains('copy-url') || e.target.closest('.copy-url')) {
                const btn = e.target.classList.contains('copy-url') ? e.target : e.target.closest('.copy-url');
                const imageUrl = btn.dataset.url;
                
                navigator.clipboard.writeText(imageUrl).then(() => {
                    const originalHtml = btn.innerHTML;
                    btn.innerHTML = '<i class="bi bi-check"></i>';
                    setTimeout(() => {
                        btn.innerHTML = originalHtml;
                    }, 2000);
                });
            }
        });

        function addImageToGallery(imageUrl) {
            const gallery = document.getElementById('imageGallery');
            
            // Remove "no images" message if it exists
            const noImagesMsg = gallery.querySelector('.text-muted');
            if (noImagesMsg) {
                noImagesMsg.parentElement.remove();
            }
            
            const imageHtml = `
                <div class="col-6 image-item" data-url="${imageUrl}">
                    <div class="card">
                        <img src="${imageUrl}" class="card-img-top" alt="Page image" />
                        <div class="card-body p-2 text-center">
                            <button type="button" class="btn btn-sm btn-danger delete-image" data-url="${imageUrl}">
                                <i class="bi bi-trash"></i>
                            </button>
                            <button type="button" class="btn btn-sm btn-secondary copy-url" data-url="${imageUrl}">
                                <i class="bi bi-clipboard"></i>
                            </button>
                        </div>
                    </div>
                </div>
            `;
            
            gallery.insertAdjacentHTML('beforeend', imageHtml);
        }
    </script>
}
