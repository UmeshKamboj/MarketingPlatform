@{
    ViewData["Title"] = "Workflows";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-diagram-3"></i> Workflows</h2>
        <a href="@Url.Action("Create", "Workflows")" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create Workflow
        </a>
    </div>

    <div class="card">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" data-bs-toggle="tab" href="#all">All</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#active">Active</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#draft">Draft</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#archived">Archived</a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <div id="workflows-list">
                <div class="text-center py-5">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script nonce="@Context.GetCspNonce()">
        const apiBaseUrl = '@ViewBag.ApiBaseUrl';
        
        document.addEventListener('DOMContentLoaded', function() {
            loadWorkflows();
        });

        async function loadWorkflows(status = null) {
            const listContainer = document.getElementById('workflows-list');
            
            try {
                const mockWorkflows = [
                    { id: 1, name: 'Welcome Series', description: 'Onboarding email sequence', status: 'Active', triggers: 2, actions: 5, lastModified: new Date().toISOString() },
                    { id: 2, name: 'Abandoned Cart Recovery', description: 'Follow-up for abandoned carts', status: 'Active', triggers: 1, actions: 3, lastModified: new Date(Date.now() - 86400000).toISOString() },
                    { id: 3, name: 'Birthday Campaign', description: 'Birthday greeting automation', status: 'Draft', triggers: 1, actions: 2, lastModified: new Date(Date.now() - 172800000).toISOString() }
                ];
                
                renderWorkflows(mockWorkflows);
            } catch (error) {
                listContainer.innerHTML = `<div class="alert alert-danger">Error loading workflows: ${error.message}</div>`;
            }
        }

        function renderWorkflows(workflows) {
            const listContainer = document.getElementById('workflows-list');
            
            if (!workflows || workflows.length === 0) {
                listContainer.innerHTML = '<div class="alert alert-info"><i class="bi bi-info-circle"></i> No workflows found.</div>';
                return;
            }

            let html = '<div class="row">';
            workflows.forEach(workflow => {
                const statusColors = { Active: 'success', Draft: 'secondary', Archived: 'warning' };
                html += `
                    <div class="col-md-6 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div>
                                        <h5 class="card-title">${workflow.name}</h5>
                                        <p class="card-text text-muted">${workflow.description}</p>
                                    </div>
                                    <span class="badge bg-${statusColors[workflow.status]}">${workflow.status}</span>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <small class="text-muted">
                                        <i class="bi bi-lightning"></i> ${workflow.triggers} triggers
                                        <i class="bi bi-gear ms-2"></i> ${workflow.actions} actions
                                    </small>
                                    <small class="text-muted">Modified: ${new Date(workflow.lastModified).toLocaleDateString()}</small>
                                </div>
                                <div class="btn-group w-100">
                                    <button class="btn btn-sm btn-outline-primary" onclick="editWorkflow(${workflow.id})">
                                        <i class="bi bi-pencil"></i> Edit
                                    </button>
                                    <button class="btn btn-sm btn-outline-success" onclick="duplicateWorkflow(${workflow.id})">
                                        <i class="bi bi-files"></i> Duplicate
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" onclick="deleteWorkflow(${workflow.id})">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
            });
            html += '</div>';
            
            listContainer.innerHTML = html;
        }

        function editWorkflow(id) {
            window.location.href = `/Workflows/Edit/${id}`;
        }

        function duplicateWorkflow(id) {
            alert('Workflow duplicated! (Demo)');
            loadWorkflows();
        }

        function deleteWorkflow(id) {
            if (confirm('Are you sure you want to delete this workflow?')) {
                alert('Workflow deleted! (Demo)');
                loadWorkflows();
            }
        }
    </script>
}
