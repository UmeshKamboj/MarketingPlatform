@{
    ViewData["Title"] = "SMS Keywords";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-hash"></i> SMS Keywords</h2>
        <a href="@Url.Action("Create", "Keywords")" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create Keyword
        </a>
    </div>

    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h5 class="mb-0">Keywords List</h5>
                </div>
                <div class="col-md-6 text-end">
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-outline-secondary btn-sm active filter-btn" data-status="all">All</button>
                        <button type="button" class="btn btn-outline-success btn-sm filter-btn" data-status="active">Active</button>
                        <button type="button" class="btn btn-outline-secondary btn-sm filter-btn" data-status="inactive">Inactive</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="keywordsTable" class="table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Keyword</th>
                            <th>Auto Response</th>
                            <th>Campaign</th>
                            <th>Messages</th>
                            <th>Opt-Ins / Opt-Outs</th>
                            <th>Status</th>
                            <th class="no-export text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script nonce="@Context.GetCspNonce()">
        window.keywordsConfig = {
            apiBaseUrl: '@ViewBag.ApiBaseUrl'
        };
    </script>
    <script src="~/js/keywords-index.js" asp-append-version="true"></script>
}
