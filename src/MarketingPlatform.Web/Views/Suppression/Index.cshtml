@{
    ViewData["Title"] = "Suppression Lists";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1 fw-bold"><i class="bi bi-shield-x text-primary me-2"></i>Suppression Lists</h2>
            <p class="text-muted mb-0">Manage opt-outs, bounces, and blocked contacts</p>
        </div>
        <a href="@Url.Action("Create", "Suppression")" class="btn btn-primary btn-lg shadow-sm">
            <i class="bi bi-plus-circle me-2"></i>Create List
        </a>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="stat-card stat-primary">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="stat-value">0</div>
                        <div class="stat-label">Total Lists</div>
                    </div>
                    <div class="text-primary fs-2"><i class="bi bi-list-ul"></i></div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card stat-danger">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="stat-value">0</div>
                        <div class="stat-label">Total Entries</div>
                    </div>
                    <div class="text-danger fs-2"><i class="bi bi-person-x-fill"></i></div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card stat-success">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="stat-value">0</div>
                        <div class="stat-label">Active Lists</div>
                    </div>
                    <div class="text-success fs-2"><i class="bi bi-check-circle-fill"></i></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Card -->
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-3">
                    <label class="form-label small text-muted">Filter by Type</label>
                    <select class="form-select" id="typeFilter">
                        <option value="">All Types</option>
                        <option value="OptOut">Opt-Out</option>
                        <option value="Bounced">Bounced</option>
                        <option value="Complained">Complained</option>
                        <option value="Invalid">Invalid</option>
                        <option value="Custom">Custom</option>
                    </select>
                </div>
            </div>
            
            <div class="table-responsive">
                <table id="suppressionTable" class="table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Entries</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th class="no-export text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script nonce="@Context.GetCspNonce()">
        window.suppressionConfig = {
            apiBaseUrl: '@ViewBag.ApiBaseUrl'
        };
    </script>
    <script src="~/js/suppression-index.js" asp-append-version="true"></script>
}
