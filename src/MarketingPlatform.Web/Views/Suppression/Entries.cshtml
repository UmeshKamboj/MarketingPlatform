@{
    ViewData["Title"] = "Manage Entries";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-list-ul"></i> Suppression List Entries</h2>
        <div>
            <a href="@Url.Action("Import", "Suppression")" class="btn btn-outline-primary me-2">
                <i class="bi bi-upload"></i> Import CSV
            </a>
            <a href="@Url.Action("Index", "Suppression")" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Lists
            </a>
        </div>
    </div>

    <div class="card mb-3">
        <div class="card-body">
            <h5 id="listName">Loading...</h5>
            <p class="text-muted mb-0" id="listDescription"></p>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input type="text" class="form-control" id="searchInput" placeholder="Search entries...">
                    </div>
                </div>
                <div class="col-md-6 text-end">
                    <button class="btn btn-primary btn-sm" onclick="showAddModal()">
                        <i class="bi bi-plus"></i> Add Entry
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div id="entries-list">
                <div class="text-center py-5">
                    <div class="spinner-border" role="status"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addEntryModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Entry</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="addEntryForm">
                    <div class="mb-3">
                        <label for="entryValue" class="form-label">Email or Phone <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="entryValue" required>
                    </div>
                    <div class="mb-3">
                        <label for="reason" class="form-label">Reason</label>
                        <input type="text" class="form-control" id="reason">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="addEntry()">Add Entry</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const apiBaseUrl = '@ViewBag.ApiBaseUrl';
        const listId = window.location.pathname.split('/').pop();
        
        document.addEventListener('DOMContentLoaded', function() {
            loadList();
            document.getElementById('searchInput').addEventListener('input', loadList);
        });

        async function loadList() {
            try {
                const mockList = {
                    id: listId,
                    name: 'Global Opt-Outs',
                    description: 'All users who have opted out',
                    entries: [
                        { id: 1, value: 'user@example.com', reason: 'User requested opt-out', addedAt: '2024-03-20 10:30' },
                        { id: 2, value: '+1234567890', reason: 'SMS opt-out', addedAt: '2024-03-19 14:20' },
                        { id: 3, value: 'another@example.com', reason: 'Spam complaint', addedAt: '2024-03-18 09:15' }
                    ]
                };
                
                document.getElementById('listName').textContent = mockList.name;
                document.getElementById('listDescription').textContent = mockList.description;
                
                renderEntries(mockList.entries);
            } catch (error) {
                document.getElementById('entries-list').innerHTML = `<div class="alert alert-danger">Error: ${error.message}</div>`;
            }
        }

        function renderEntries(entries) {
            const container = document.getElementById('entries-list');
            
            if (!entries || entries.length === 0) {
                container.innerHTML = '<div class="alert alert-info"><i class="bi bi-info-circle"></i> No entries found.</div>';
                return;
            }

            let html = '<div class="table-responsive"><table class="table table-hover">';
            html += '<thead><tr><th>Value</th><th>Reason</th><th>Added</th><th>Actions</th></tr></thead><tbody>';

            entries.forEach(entry => {
                html += `<tr>
                    <td>${entry.value}</td>
                    <td>${entry.reason || 'N/A'}</td>
                    <td><small>${entry.addedAt}</small></td>
                    <td>
                        <button class="btn btn-sm btn-outline-danger" onclick="removeEntry(${entry.id})">
                            <i class="bi bi-trash"></i> Remove
                        </button>
                    </td>
                </tr>`;
            });

            html += '</tbody></table></div>';
            container.innerHTML = html;
        }

        function showAddModal() {
            const modal = new bootstrap.Modal(document.getElementById('addEntryModal'));
            modal.show();
        }

        function addEntry() {
            const value = document.getElementById('entryValue').value;
            if (!value) {
                alert('Please enter an email or phone number.');
                return;
            }
            alert('Entry added! (Demo)');
            bootstrap.Modal.getInstance(document.getElementById('addEntryModal')).hide();
            loadList();
        }

        function removeEntry(id) {
            if (confirm('Remove this entry from the suppression list?')) {
                alert('Entry removed! (Demo)');
                loadList();
            }
        }
    </script>
}
