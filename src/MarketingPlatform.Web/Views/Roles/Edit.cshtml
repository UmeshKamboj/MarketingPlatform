@{
    ViewData["Title"] = "Edit Role";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-pencil-square"></i> Edit Role</h2>
        <a href="@Url.Action("Index", "Roles")" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Roles
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <form id="roleForm">
                <div class="mb-3">
                    <label for="roleName" class="form-label">Role Name <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="roleName" value="Manager" required>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" id="description" rows="2">Campaign management role</textarea>
                </div>

                <hr>

                <h5 class="mb-3">Permissions</h5>
                <div class="row">
                    <div class="col-md-6">
                        <h6>Campaign Management</h6>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="viewCampaigns" checked>
                            <label class="form-check-label" for="viewCampaigns">View Campaigns</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="createCampaigns" checked>
                            <label class="form-check-label" for="createCampaigns">Create Campaigns</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="editCampaigns" checked>
                            <label class="form-check-label" for="editCampaigns">Edit Campaigns</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="deleteCampaigns">
                            <label class="form-check-label" for="deleteCampaigns">Delete Campaigns</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h6>Contact Management</h6>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="viewContacts" checked>
                            <label class="form-check-label" for="viewContacts">View Contacts</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="createContacts" checked>
                            <label class="form-check-label" for="createContacts">Create Contacts</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="editContacts" checked>
                            <label class="form-check-label" for="editContacts">Edit Contacts</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="deleteContacts">
                            <label class="form-check-label" for="deleteContacts">Delete Contacts</label>
                        </div>
                    </div>
                </div>

                <hr>

                <div class="d-flex justify-content-between">
                    <button type="button" class="btn btn-danger" onclick="deleteRole()">
                        <i class="bi bi-trash"></i> Delete Role
                    </button>
                    <div>
                        <button type="button" class="btn btn-secondary me-2" onclick="window.location.href='/Roles/Index'">Cancel</button>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Save Changes
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script nonce="@Context.GetCspNonce()">
        function deleteRole() {
            if (confirm('Are you sure you want to delete this role?')) {
                alert('Role deleted! (Demo)');
                window.location.href = '/Roles/Index';
            }
        }

        document.getElementById('roleForm').addEventListener('submit', function(e) {
            e.preventDefault();
            alert('Role updated successfully! (Demo)');
            window.location.href = '/Roles/Index';
        });
    </script>
}
