@{
    ViewData["Title"] = "Add Provider";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-hdd-network"></i> Add Provider</h2>
        <a href="@Url.Action("Index", "Providers")" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Providers
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <form id="providerForm">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="name" class="form-label">Provider Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="name" required>
                    </div>
                    <div class="col-md-6">
                        <label for="type" class="form-label">Type <span class="text-danger">*</span></label>
                        <select class="form-select" id="type" required>
                            <option value="">Select Type</option>
                            <option value="SMS">SMS</option>
                            <option value="MMS">MMS</option>
                            <option value="Email">Email</option>
                        </select>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="apiKey" class="form-label">API Key <span class="text-danger">*</span></label>
                    <input type="password" class="form-control" id="apiKey" required>
                </div>

                <div class="mb-3">
                    <label for="apiSecret" class="form-label">API Secret</label>
                    <input type="password" class="form-control" id="apiSecret">
                </div>

                <div class="mb-3">
                    <label for="endpoint" class="form-label">API Endpoint</label>
                    <input type="url" class="form-control" id="endpoint" placeholder="https://api.provider.com">
                </div>

                <div class="mb-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="isDefault">
                        <label class="form-check-label" for="isDefault">Set as default provider for this type</label>
                    </div>
                </div>

                <div class="mb-3">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="isActive" checked>
                        <label class="form-check-label" for="isActive"><strong>Active Provider</strong></label>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <button type="button" class="btn btn-secondary" onclick="window.location.href='/Providers/Index'">Cancel</button>
                    <button type="button" class="btn btn-outline-primary" onclick="testConnection()"><i class="bi bi-play"></i> Test Connection</button>
                    <button type="submit" class="btn btn-primary"><i class="bi bi-check-circle"></i> Add Provider</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script nonce="@Context.GetCspNonce()">
        function testConnection() {
            alert('Testing connection... (Demo)');
        }

        document.getElementById('providerForm').addEventListener('submit', function(e) {
            e.preventDefault();
            alert('Provider added! (Demo)');
            window.location.href = '/Providers/Index';
        });
    </script>
}
