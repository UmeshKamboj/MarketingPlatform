@{
    ViewData["Title"] = "Campaigns";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1 fw-bold"><i class="bi bi-megaphone-fill text-primary me-2"></i>Campaigns</h2>
            <p class="text-muted mb-0">Manage and monitor your marketing campaigns</p>
        </div>
        <a href="@Url.Action("Create", "Campaigns")" class="btn btn-primary btn-lg shadow-sm">
            <i class="bi bi-plus-circle me-2"></i>Create Campaign
        </a>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="stat-card stat-primary">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="stat-value">0</div>
                        <div class="stat-label">Total Campaigns</div>
                    </div>
                    <div class="text-primary fs-2"><i class="bi bi-megaphone"></i></div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card stat-success">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="stat-value">0</div>
                        <div class="stat-label">Running</div>
                    </div>
                    <div class="text-success fs-2"><i class="bi bi-play-circle-fill"></i></div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card stat-warning">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="stat-value">0</div>
                        <div class="stat-label">Scheduled</div>
                    </div>
                    <div class="text-warning fs-2"><i class="bi bi-clock-fill"></i></div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card stat-danger">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="stat-value">0</div>
                        <div class="stat-label">Draft</div>
                    </div>
                    <div class="text-secondary fs-2"><i class="bi bi-file-earmark-text"></i></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Card -->
    <div class="card shadow-sm">
        <div class="card-header bg-white border-bottom-0">
            <ul class="nav nav-tabs card-header-tabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" data-bs-toggle="tab" href="#all">
                        <i class="bi bi-list-ul me-1"></i>All
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#draft">
                        <i class="bi bi-file-earmark me-1"></i>Draft
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#scheduled">
                        <i class="bi bi-clock me-1"></i>Scheduled
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#running">
                        <i class="bi bi-play-circle me-1"></i>Running
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#paused">
                        <i class="bi bi-pause-circle me-1"></i>Paused
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#completed">
                        <i class="bi bi-check-circle me-1"></i>Completed
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#failed">
                        <i class="bi bi-x-circle me-1"></i>Failed
                    </a>
                </li>
            </ul>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table id="campaignsTable" class="table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Status</th>
                            <th>Schedule</th>
                            <th>Created</th>
                            <th class="no-export text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script nonce="@Context.GetCspNonce()">
        // Pass server-side data to JavaScript
        window.campaignsConfig = {
            apiBaseUrl: '@ViewBag.ApiBaseUrl'
        };
    </script>
    <script src="~/js/campaigns-index.js" asp-append-version="true"></script>
}
