@{
    ViewData["Title"] = "Edit Webhook";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-pencil"></i> Edit Webhook</h2>
        <a href="@Url.Action("Index", "Webhooks")" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Webhooks
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <div id="loading" class="text-center py-5"><div class="spinner-border"></div></div>
            <form id="webhookForm" style="display: none;">
                <div class="mb-3">
                    <label for="name" class="form-label">Name <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="name" required>
                </div>
                <div class="mb-3">
                    <label for="url" class="form-label">URL <span class="text-danger">*</span></label>
                    <input type="url" class="form-control" id="url" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Events</label>
                    <div id="eventsContainer"></div>
                </div>
                <div class="mb-3">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="isActive">
                        <label class="form-check-label" for="isActive">Active</label>
                    </div>
                </div>
                <div class="d-flex justify-content-between">
                    <button type="button" class="btn btn-outline-danger" onclick="deleteWebhook()"><i class="bi bi-trash"></i> Delete</button>
                    <div class="d-flex gap-2">
                        <button type="button" class="btn btn-secondary" onclick="window.location.href='/Webhooks/Index'">Cancel</button>
                        <button type="submit" class="btn btn-primary"><i class="bi bi-check-circle"></i> Save Changes</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const webhookId = window.location.pathname.split('/').pop();
        
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(() => {
                document.getElementById('name').value = 'Campaign Status Updates';
                document.getElementById('url').value = 'https://api.example.com/webhooks/campaign';
                document.getElementById('isActive').checked = true;
                document.getElementById('loading').style.display = 'none';
                document.getElementById('webhookForm').style.display = 'block';
            }, 500);
        });

        document.getElementById('webhookForm').addEventListener('submit', function(e) {
            e.preventDefault();
            alert('Webhook updated! (Demo)');
            window.location.href = '/Webhooks/Index';
        });

        function deleteWebhook() {
            if (confirm('Delete this webhook?')) {
                alert('Webhook deleted! (Demo)');
                window.location.href = '/Webhooks/Index';
            }
        }
    </script>
}
