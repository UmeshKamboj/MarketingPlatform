@{
    ViewData["Title"] = "Webhooks";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1 fw-bold"><i class="bi bi-broadcast-pin text-primary me-2"></i>Webhooks</h2>
            <p class="text-muted mb-0">Manage webhook integrations and event notifications</p>
        </div>
        <a href="@Url.Action("Create", "Webhooks")" class="btn btn-primary btn-lg shadow-sm">
            <i class="bi bi-plus-circle me-2"></i>Create Webhook
        </a>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="stat-card stat-primary">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="stat-value">0</div>
                        <div class="stat-label">Total Webhooks</div>
                    </div>
                    <div class="text-primary fs-2"><i class="bi bi-broadcast"></i></div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card stat-success">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="stat-value">0</div>
                        <div class="stat-label">Active</div>
                    </div>
                    <div class="text-success fs-2"><i class="bi bi-check-circle-fill"></i></div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card stat-info">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="stat-value">0%</div>
                        <div class="stat-label">Success Rate</div>
                    </div>
                    <div class="text-info fs-2"><i class="bi bi-graph-up-arrow"></i></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Card -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table id="webhooksTable" class="table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>URL</th>
                            <th>Events</th>
                            <th>Status</th>
                            <th>Success Rate</th>
                            <th class="no-export text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script nonce="@Context.GetCspNonce()">
        window.webhooksConfig = {
            apiBaseUrl: '@ViewBag.ApiBaseUrl'
        };
    </script>
    <script src="~/js/webhooks-index.js" asp-append-version="true"></script>
}
