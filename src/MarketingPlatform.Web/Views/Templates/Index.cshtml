@{
    ViewData["Title"] = "Templates";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-file-earmark-text"></i> Templates</h2>
        <a href="@Url.Action("Create", "Templates")" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create Template
        </a>
    </div>

    <div class="card">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" data-bs-toggle="tab" href="#all">All</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#email">Email</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#sms">SMS</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#mms">MMS</a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <div id="templates-list">
                <div class="text-center py-5">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const apiBaseUrl = '@ViewBag.ApiBaseUrl';
        
        document.addEventListener('DOMContentLoaded', function() {
            loadTemplates();
        });

        async function loadTemplates(type = null) {
            const listContainer = document.getElementById('templates-list');
            
            try {
                const mockTemplates = [
                    { id: 1, name: 'Welcome Email', type: 'Email', subject: 'Welcome to Our Platform!', lastModified: new Date().toISOString(), isActive: true },
                    { id: 2, name: 'Order Confirmation', type: 'Email', subject: 'Your Order #{OrderNumber}', lastModified: new Date().toISOString(), isActive: true },
                    { id: 3, name: 'Flash Sale Alert', type: 'SMS', subject: null, lastModified: new Date(Date.now() - 86400000).toISOString(), isActive: true },
                    { id: 4, name: 'Product Launch', type: 'MMS', subject: null, lastModified: new Date(Date.now() - 172800000).toISOString(), isActive: false }
                ];
                
                const filtered = type ? mockTemplates.filter(t => t.type === type) : mockTemplates;
                renderTemplates(filtered);
            } catch (error) {
                listContainer.innerHTML = `<div class="alert alert-danger">Error loading templates: ${error.message}</div>`;
            }
        }

        function renderTemplates(templates) {
            const listContainer = document.getElementById('templates-list');
            
            if (!templates || templates.length === 0) {
                listContainer.innerHTML = '<div class="alert alert-info"><i class="bi bi-info-circle"></i> No templates found.</div>';
                return;
            }

            let html = '<div class="row">';
            templates.forEach(template => {
                const typeColors = { Email: 'primary', SMS: 'success', MMS: 'info' };
                html += `
                    <div class="col-md-6 col-lg-4 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="card-title">${template.name}</h5>
                                    <span class="badge bg-${typeColors[template.type]}">${template.type}</span>
                                </div>
                                ${template.subject ? `<p class="card-text text-muted small">${template.subject}</p>` : ''}
                                <p class="card-text small">
                                    <i class="bi bi-clock"></i> Modified: ${new Date(template.lastModified).toLocaleDateString()}
                                    <br>
                                    ${template.isActive ? '<span class="badge bg-success">Active</span>' : '<span class="badge bg-secondary">Inactive</span>'}
                                </p>
                            </div>
                            <div class="card-footer bg-transparent">
                                <div class="btn-group w-100">
                                    <button class="btn btn-sm btn-outline-primary" onclick="editTemplate(${template.id})">
                                        <i class="bi bi-pencil"></i> Edit
                                    </button>
                                    <button class="btn btn-sm btn-outline-secondary" onclick="duplicateTemplate(${template.id})">
                                        <i class="bi bi-files"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" onclick="deleteTemplate(${template.id})">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
            });
            html += '</div>';
            
            listContainer.innerHTML = html;
        }

        function editTemplate(id) {
            window.location.href = `/Templates/Edit/${id}`;
        }

        function duplicateTemplate(id) {
            alert('Template duplicated! (Demo)');
            loadTemplates();
        }

        function deleteTemplate(id) {
            if (confirm('Are you sure you want to delete this template?')) {
                alert('Template deleted! (Demo)');
                loadTemplates();
            }
        }

        document.querySelectorAll('[data-bs-toggle="tab"]').forEach(tab => {
            tab.addEventListener('shown.bs.tab', function(e) {
                const target = e.target.getAttribute('href');
                const typeMap = { '#all': null, '#email': 'Email', '#sms': 'SMS', '#mms': 'MMS' };
                loadTemplates(typeMap[target]);
            });
        });
    </script>
}
