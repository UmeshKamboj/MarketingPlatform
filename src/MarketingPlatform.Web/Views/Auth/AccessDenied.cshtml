@{
    ViewData["Title"] = "Access Denied";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6 text-center">
            <div class="card shadow-sm">
                <div class="card-body p-5">
                    <i class="bi bi-shield-x text-danger" style="font-size: 5rem;"></i>
                    <h2 class="mt-4 mb-3">Access Denied</h2>
                    <p class="text-muted mb-4">
                        You don't have permission to access this resource. Please contact your administrator if you believe this is an error.
                    </p>
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Dashboard", "Users")" class="btn btn-primary">
                            <i class="bi bi-house-door"></i> Go to Dashboard
                        </a>
                        <a href="@Url.Action("Login", "Auth")" class="btn btn-outline-secondary">
                            <i class="bi bi-box-arrow-in-right"></i> Login as Different User
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
