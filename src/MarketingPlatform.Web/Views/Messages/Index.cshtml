@{
    ViewData["Title"] = "Messages";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1 fw-bold"><i class="bi bi-envelope-fill text-primary me-2"></i>Messages</h2>
            <p class="text-muted mb-0">View and manage your message history</p>
        </div>
        <a href="@Url.Action("Compose", "Messages")" class="btn btn-primary btn-lg shadow-sm">
            <i class="bi bi-plus-circle me-2"></i>Compose Message
        </a>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="stat-card stat-primary">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="stat-value">0</div>
                        <div class="stat-label">Total Sent</div>
                    </div>
                    <div class="text-primary fs-2"><i class="bi bi-send-fill"></i></div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card stat-success">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="stat-value">0%</div>
                        <div class="stat-label">Delivery Rate</div>
                    </div>
                    <div class="text-success fs-2"><i class="bi bi-check-circle-fill"></i></div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card stat-warning">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="stat-value">0</div>
                        <div class="stat-label">Pending</div>
                    </div>
                    <div class="text-warning fs-2"><i class="bi bi-hourglass-split"></i></div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card stat-danger">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="stat-value">0</div>
                        <div class="stat-label">Failed</div>
                    </div>
                    <div class="text-danger fs-2"><i class="bi bi-exclamation-circle-fill"></i></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Card -->
    <div class="card shadow-sm">
        <div class="card-header bg-white border-bottom-0">
            <ul class="nav nav-tabs card-header-tabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" data-bs-toggle="tab" href="#all">
                        <i class="bi bi-list-ul me-1"></i>All
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#sent">
                        <i class="bi bi-send-check me-1"></i>Sent
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#pending">
                        <i class="bi bi-hourglass me-1"></i>Pending
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#failed">
                        <i class="bi bi-x-circle me-1"></i>Failed
                    </a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-3">
                    <label class="form-label small text-muted">Filter by Channel</label>
                    <select class="form-select" id="channelFilter">
                        <option value="">All Channels</option>
                        <option value="0"><i class="bi bi-phone"></i> SMS</option>
                        <option value="1"><i class="bi bi-image"></i> MMS</option>
                        <option value="2"><i class="bi bi-envelope"></i> Email</option>
                    </select>
                </div>
            </div>
            
            <div class="table-responsive">
                <table id="messagesTable" class="table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Message</th>
                            <th>Channel</th>
                            <th>Recipients</th>
                            <th>Status</th>
                            <th>Delivered</th>
                            <th>Engagement</th>
                            <th>Sent Date</th>
                            <th class="no-export text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script nonce="@Context.GetCspNonce()">
        window.messagesConfig = {
            apiBaseUrl: '@ViewBag.ApiBaseUrl'
        };
    </script>
    <script src="~/js/messages-index.js" asp-append-version="true"></script>
}
